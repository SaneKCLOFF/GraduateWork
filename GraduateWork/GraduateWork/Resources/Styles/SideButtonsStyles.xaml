<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--#region OrdersButton-->
    <ImageBrush x:Key="OrdersButton" 
                    ImageSource="\Resources\Icons\Orders.png" 
                    Stretch="Uniform"/>
    <ImageBrush x:Key="OrdersButton_Active" 
                    ImageSource="\Resources\Icons\Orders_Active.png" 
                    Stretch="Uniform"/>

    <Style x:Key="OrdersButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource OrdersButton}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="OrdersButtonBorder" 
                                Background="{TemplateBinding Background}" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" TargetName="OrdersButtonBorder" Value="{StaticResource OrdersButton_Active}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
